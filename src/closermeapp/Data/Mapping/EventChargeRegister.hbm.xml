<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="closermeapp.Bussiness.ChargesRegister.EventChargeRegister" table="event_charge_register">
        <id name="eventRegisterId" column="id_report">
            <generator class="assigned"/>
        </id>

        <property name="eventName"/>
        <property name="eventStartDate" column="eventStartDate"/>
        <property name="eventEndDate" column="eventEndDate"/>
        <property name="clientName" column="clientName"/>
        <property name="clientPhone" column="clientPhone"/>

    </class>
</hibernate-mapping>