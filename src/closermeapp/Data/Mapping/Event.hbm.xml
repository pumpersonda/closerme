<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="closermeapp.Bussiness.Entities.Event" table="event">
        <id name="eventID" column="eventID">
            <generator class="identity"/>
        </id>
        <property name="name" type="java.lang.String" column="name"/>
        <property name="startDate" type="java.lang.String" column="startDate"/>
        <property name="endDate" type="java.lang.String" column="endDate"/>
        <property name="clientName" type="java.lang.String" column="clientName"/>
        <property name="clientPhone" type="java.lang.String" column="clientPhone"/>
    </class>
</hibernate-mapping>